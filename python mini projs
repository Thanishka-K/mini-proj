# proj to automated tracking system
import pandas as pd
import matplotlib.pyplot as plt
data = {
    'Category': ['Food', 'Rent', 'Transport', 'Entertainment', 'Utilities'],
    'Amount': [250, 1200, 150, 200, 100]
}

df = pd.DataFrame(data)

def add_expense(category, amount):
    global df
    new_row = pd.DataFrame({'Category': [category], 'Amount': [amount]})
    df = pd.concat([df, new_row], ignore_index=True)
    print(f"Added: {category} - ${amount}")

add_expense('Groceries', 85)

plt.figure(figsize=(8, 6))
plt.pie(df.groupby('Category')['Amount'].sum(), labels=df['Category'].unique(), autopct='%1.1f%%', startangle=140)
plt.title('Monthly Expense Breakdown')
plt.show()

print(df)

# proj random password generator (easy)
import random
import string

length = int(input("Enter password length: "))
chars = string.ascii_letters + string.digits + string.punctuation
password = "".join(random.choices(chars, k=length))
print("Your password is:", password)

(complex code)
import string
import secrets

def generate_password(length, use_digits=True, use_special=True):
    letters = string.ascii_letters
    digits = string.digits if use_digits else ''
    special = string.punctuation if use_special else ''
    
    all_chars = letters + digits + special
    
    if not all_chars:
        return "Error: No characters selected!"

    # Generate a random password using the secrets module
    # We use a list comprehension to pick a random char 'length' times
    password = ''.join(secrets.choice(all_chars) for _ in range(length))
    
    return password

def main():
    print("--- ğŸ” Python Password Generator ---")
    
    try:
        length = int(input("Enter password length (e.g., 12): "))
        incl_numbers = input("Include numbers? (y/n): ").lower() == 'y'
        incl_special = input("Include special characters? (y/n): ").lower() == 'y'
    
        pwd = generate_password(length, incl_numbers, incl_special)
        print(f"\nYour new secure password is: **{pwd}**")
        
    except ValueError:
        print("Please enter a valid number for the length.")

if __name__ == "__main__":
    main()


# Real-Time Currency Converter
pip install requests
import requests

def convert_currency(amount, from_curr, to_curr):
    # Using a free API
    url = f"https://api.exchangerate-api.com/v4/latest/{from_curr}"
    response = requests.get(url).json()
    rate = response['rates'][to_curr]
    
    converted = amount * rate
    print(f"{amount} {from_curr} is equal to {converted:.2f} {to_curr}")

# Example usage
convert_currency(100, "USD", "EUR")

# "Drink Water" Reminder

pip install plyer
import time
from plyer import notification

while True:
    notification.notify(
        title = "Health Alert!",
        message = "Time to drink water and stretch your back.",
        timeout = 10 # Notification stays for 10 seconds
    )
    time.sleep(3600) # Wait for 1 hour (3600 seconds)

#Text Sentiment Analyzer
from textblob import TextBlob

text = input("Enter some text to analyze: ")
analysis = TextBlob(text)

# polarity is between -1.0 (negative) and 1.0 (positive)
if analysis.sentiment.polarity > 0:
    print("Vibe: Positive! ğŸ˜Š")
elif analysis.sentiment.polarity < 0:
    print("Vibe: Negative. ğŸ˜Ÿ")
else:
    print("Vibe: Neutral. ğŸ˜")

